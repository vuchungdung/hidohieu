@model hidohieu.Models.KhachHang

<ul class="nav navbar-nav navbar-right">
    @if (Session["User"] == null)
    {       
            
    <li><a href="/User/Register"> Đăng kí |</a></li>
        <li class="dropdown">
            <a href="/User/Login" class="dropdown-toggle" data-toggle="dropdown">Đăng nhập <b class="caret"></b></a>
            <ul class="dropdown-menu" style="padding: 15px;min-width: 250px">
                <li>
                    <div class="row">
                        <div class="col-md-12">
                            @using (Html.BeginForm("LoginPage", "User", FormMethod.Post))
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.TaiKhoan, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Tên đăng nhập" })
                                    @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox"> Ghi nhớ?
                                    </label>
                                </div>
                                <div class="form-group">
                                    <button style="background-color:#0094ff" type="submit" class="btn btn-success btn-block">Đăng nhập</button>
                                </div>
                            <div class="form-group">
                                <a href="~/Admin/Login"><i class="fa fa-unlock" aria-hidden="true"></i> admin </a>
                            </div>
                            }
                        </div>
                    </div>
                </li>
            </ul>
        </li>
        @*<li>
            <a href="~/Admin/Login"><i class="fa fa-user-secret" aria-hidden="true"></i></a>
        </li>*@
        @Html.Action("CartHeader", "Cart")
    }
    else
    {
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-user-o" aria-hidden="true"></i> Tài Khoản : @Session["User"] <i class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
                <li>
                    <a href="/User/EditUser"><i class="fa fa-smile-o" aria-hidden="true"></i> Hồ sơ</a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="/User/Logout"><i class="fa fa-sign-out fa-fw"></i> Đăng xuất</a>
                </li>
            </ul>
            <!-- /.dropdown-user -->
        </li>
    }

</ul>

