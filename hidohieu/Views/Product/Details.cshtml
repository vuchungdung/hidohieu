@model hidohieu.Models.SanPham

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div style="float:left; margin-right:15px; margin-left:80px;" class="span5">
        <img src="/images/@Model.AnhSanPham" alt="@Model.AnhSanPham" title="@Model.TenSanPham" width="250" height="360" />
    </div>
    <div style="max-width:600px; float:left;" class="span7">
        <h2>@Model.TenSanPham</h2>
        <h4 class="muted">Thể loại : @Model.LoaiSanPham.TenLoai - Tác giả: @Model.NhaSanXuat.TenNSX</h4>
        <p>Nhà xuất bản : @Model.NhaCungCap.TenNCC</p>
        <p>@Model.Mota <a href="#">Xem chi tiết</a></p>
        <hr>
        @if(Model.SoLuongTon > 0)
        {
            <p>Tình trạng: Còn hàng</p>
        }
        else
        {
            <p>Tình trạng: Liên hệ</p>
        }
        @if (Model.GiaBan >0)
        {
            <h3>Giá - @Model.GiaBan.Value.ToString("N0") VND</h3>
        }
        else
        {
            <h3>Giá - Liên hệ</h3>
        }
        <br>
        <p><a href="/Cart/AddItem/?id=@Model.MaSanPham&quantity=1" class="btn btn-warning btn-large">THÊM VÀO GIỎ HÀNG</a></p>
    </div>
</div>

<hr />
<h3>Sách bán chạy</h3>
<div class="row">
    @Html.Action("FavoriteProduct", "Product")
</div>


