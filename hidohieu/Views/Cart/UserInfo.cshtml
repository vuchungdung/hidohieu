@model hidohieu.Models.KhachHang

<div class="section group">
    <div class="col-md-6">
        @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
            {
            <div class="form-group">
                <h4>Thông tin khách hàng</h4>
                <input name="MaKH" class="form-control" value="@Model.MaKH" type="hidden" />
            </div>
            <div class="form-group">
                <label>Họ tên khách hàng</label>
                <input name="TenKH" class="form-control" value="@Model.TenKH" readonly="readonly" />              
            </div>
                <div class="form-group">
                    <label>Email</label>
                    <input name="Email" type="email" class="form-control" value="@Model.Email" readonly="readonly" />  
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input name="DiaChi" class="form-control" value="@Model.DiaChi" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label>Điện thoại</label>
                    <input name="DienThoai" class="form-control" value="@Model.DienThoai" readonly="readonly" />
                </div>
                <button type="submit" class="btn btn-success">Gửi đơn hàng</button>
        }
    </div>

</div>



